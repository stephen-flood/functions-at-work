	\def\xval{-1} \draw[stealth-,double,blue] (\xval,-0.25) -- (\xval,-0.75) node[below] {\scriptsize $f''(\xval)=(-)$};  \node[blue] at (\xval,0.4) {\large $\stackrel{\cdot\,\cdot}{\frown}$};
	
