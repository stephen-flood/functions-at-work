\foreach \x in {0,0.25,...,3} 
{
	\draw[fill,color=green!66!black] (\x,{f(\x)}) circle (1.25pt);
	\draw[-stealth,color=green!66!black] (\x,{f(\x)})--(\x,0);
}
\foreach \x in {3.25,3.5,...,6} 
{
