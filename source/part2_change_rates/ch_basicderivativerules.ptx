          \draw [curve,domain=0.25:4,color=blue] plot ({\x},{(\x-2)+1}) node[right] {slope is $C'(5)$ in dollars/item}; 
          \filldraw [color=red] (2,1) circle (2pt);
          \node [below,color=red] at (2,0) {$5$};
