                            name:"(a,f(a))",
                            color:"red" 
                          &gt;&gt; ;
                text( -0.75, function() {return f1(xslider.Value());}, "f(a)") 
                          &lt;&lt; 
                            color:"red" 
                          &gt;&gt; ;
                text( function() {return xslider.Value();} , -0.25 , "a") 
