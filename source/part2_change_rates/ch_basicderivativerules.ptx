                            color:"red",
                            straightFirst:false, 
                            straightLast:false,
                            dash:1
                          &gt;&gt; ;
                line( [function() {return xslider.Value();} ,
                            function() {return f1(xslider.Value());}],[function() {return xslider.Value();}, 0 ] )
                          &lt;&lt; 
                            color:"red",
                            straightFirst:false, 
                            straightLast:false,
                            dash:1
